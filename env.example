# Flight Booking Agent Environment Variables
# Copy this file to .env and fill in your actual API keys

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Amadeus API Configuration
AMADEUS_CLIENT_ID=your_amadeus_client_id_here
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret_here

# Database Configuration
# For Neon Postgres (production) - Get this from neon.tech
NEON_DATABASE_URL=postgresql://username:password@hostname/database?sslmode=require
# OR individual components:
# NEON_HOST=your_neon_host
# NEON_DATABASE=your_neon_database
# NEON_USER=your_neon_user
# NEON_PASSWORD=your_neon_password

# For local development (fallback)
DB_USER=postgres
DB_HOST=localhost
DB_NAME=porter_travel
DB_PASSWORD=your_database_password_here
DB_PORT=5432

# Telemetry Configuration
TELEMETRY_ENDPOINT=https://your-telemetry-service.com/api/events
TELEMETRY_API_KEY=your_telemetry_api_key_here
VERCEL_ANALYTICS_ID=your_vercel_analytics_id_here

# Server Configuration
PORT=3000
NODE_ENV=development

# API Authentication
API_KEY=your_api_key_here
JWT_SECRET=your_jwt_secret_here

# OAuth 2.0 Configuration (for ChatGPT Actions)
OAUTH_CLIENT_ID=porter-flight-booking
OAUTH_CLIENT_SECRET=your_oauth_client_secret_here
OAUTH_REDIRECT_URI=https://chatgpt.com/aip/{g-YOUR-GPT-ID-HERE}/oauth/callback
OAUTH_AUTHORIZATION_URL=https://porter-preview.vercel.app/api/oauth/authorize
OAUTH_TOKEN_URL=https://porter-preview.vercel.app/api/oauth/token


# API Configuration
API_BASE_URL=https://porter-preview.vercel.app
API_HEALTH_URL=https://porter-preview.vercel.app/api/health
API_OPENAPI_URL=https://porter-preview.vercel.app/api/openapi
DEPLOYMENT_URL=porter-preview.vercel.app
